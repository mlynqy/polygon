# Telegram Bot配置
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# TRON配置
TRON_API_KEY=YOUR_TRONGRID_API_KEY_HERE

# 监控配置
CHECK_INTERVAL=30

# 数据库配置
DB_PATH=tron_monitor.db

# WebSocket配置（可选，用于实时监控）
# 注意：TronGrid官方不提供WebSocket服务，建议使用轮询模式或第三方WebSocket服务
USE_WEBSOCKET=false
# WEBSOCKET_URL=wss://api.tronsocket.com  # 第三方WebSocket服务示例（需要注册账号）
WEBSOCKET_URL=wss://api.trongrid.io/websocket